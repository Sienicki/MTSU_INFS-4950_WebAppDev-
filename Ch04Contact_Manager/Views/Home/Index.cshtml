@model List<Contact>;
@{
    ViewData["Title"] = "Home Page";
}

<a asp-controller="Contact" asp-action="Add">Add Contact</a>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td><a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.ContactId">@contact.F_Name</a></td>
                <td><a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.ContactId">@contact.L_Name</a></td>
                <td>@contact.PhoneNumber</td>
                <td>@contact.Category.Name</td>
                <td>
                    <a asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.ContactId">Edit</a>
                    <a asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.ContactId">Delete</a>
                </td>
            </tr>
        }

    </tbody>

</table>
