@model List<Member>;
@{
    ViewData["Title"] = "Home Page";
}

<a asp-controller="Member" asp-action="Add">Add Member</a>
<p>
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        <b>Search By:</b> @Html.RadioButton("searchBy", "Name") <text>Name</text>
        @Html.RadioButton("searchBy", "Profession", true) <text>Profession</text><br />
        @Html.TextBox("search")<input type="submit" value="Search" />
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Profession</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td><a asp-controller="Member" asp-action="Details" asp-route-id="@member.MemberId">@member.F_Name</a></td>
                <td><a asp-controller="Member" asp-action="Details" asp-route-id="@member.MemberId">@member.L_Name</a></td>
                <td>@member.PhoneNumber</td>
                <td>@member.Profession.Title</td>
                <td>
                    <a asp-controller="Member" asp-action="Edit" asp-route-id="@member.MemberId">Edit</a>
                    <a asp-controller="Member" asp-action="Delete" asp-route-id="@member.MemberId">Delete</a>
                </td>
            </tr>
        }

    </tbody>

</table>
