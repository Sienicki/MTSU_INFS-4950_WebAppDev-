
@model PriceQuotationModel
@{
    ViewBag.Title = "Price Quotation";
}

<h1>Price Quotation</h1>
<form asp-action="Index" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="SubTotal">SubTotal:</label>
        <input asp-for="SubTotal" />
    </div>
    <div>
        <label asp-for="DiscountPercent">Discount Percent:</label>
        <input asp-for="DiscountPercent" />
    </div>
    <div>
        <label>Discount Amount:</label>
        <input value = "@ViewBag.Discount.ToString("c2")"  />
    </div>
    <div>
        <label>Future Value:</label>
        <input value="@ViewBag.Total.ToString("c2")"  />
    </div>
    <button type="submit">Calculate</button>
    <a asp-action="Index">Clear</a>

</form>


