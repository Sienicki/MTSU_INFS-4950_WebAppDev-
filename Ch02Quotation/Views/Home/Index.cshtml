
@model PriceQuotationModel
@{
    ViewBag.Title = "Price Quotation";
}

<div class="container-fluid">
    <header class="jumbotron text-center text-white bg-success">
        
        <h1 class="mt-3"><span class="fas fa-money-bill-alt"></span>@ViewBag.Title</h1>
    </header>
    <main>
        <form asp-action="Index" method="post" class="form-horizontal">
            <div class="row">
                <label asp-for="SubTotal" class="control-label col-sm-3">SubTotal:</label>
                <input asp-for="SubTotal" class="form-control col-sm-3" />
                <span asp-validation-for="@Model.SubTotal"
                        class="text-danger col"></span>
            </div>
            <div class="row">
                <label asp-for="DiscountPercent" class="control-label col-sm-3">Discount Percent:</label>
                <input asp-for="DiscountPercent" class="form-control col-sm-3" />
                <span asp-validation-for="@Model.DiscountPercent"
                        class="text-danger col"></span>
            </div>
            <div class="row">
                <label class="control-label col-sm-3">Discount Amount:</label>
                <input value="@ViewBag.Discount.ToString("c2")" readonly class="form-control col-sm-3" />
            </div>
            <div class="row">
                <label class="control-label col-sm-3">Total:</label>
                <input value="@ViewBag.Total.ToString("c2")" readonly class="form-control col-sm-3" />
            </div>
            <div class="row">
                <div class="col offset-sm-3 pl-0">
                    <button type="submit" class="btn btn-success text-white"><span class="fas fa-calculator"></span> Calculate</button>
                    <a asp-action="Index" class="btn btn-success text-white"><span class="fas fa-snowplow"></span> Clear</a>
                </div>
            </div>
        </form>
    </main>
</div>


